@model Register
@{
    ViewData["Title"] = "Register user";
}

<div class="register-login-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="register-form">
                    <h2>Register</h2>
                    <form asp-controller="Account" asp-action="Register" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="group-input">
                            <label asp-for="Email" for="username">Email address *</label>
                            <input asp-for="Email" type="text" id="username">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="group-input">
                            <label asp-for="Password" for="pass">Password *</label>
                            <input asp-for="Password" id="pass">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="group-input">
                            <label asp-for="ConfirmPassword" for="con-pass">Confirm Password *</label>
                            <input asp-for="ConfirmPassword" id="con-pass">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button type="submit" class="site-btn register-btn">REGISTER</button>
                    </form>
                    <div class="switch-login">
                        <a asp-controller="Account" asp-action="Login" class="or-login">Or Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}