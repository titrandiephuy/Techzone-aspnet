@model TechZone.Models.Category.Edit

@{
    ViewData["Title"] = "Edit";
}

<div class="card-header py-3">
    <h2 class="m-0 font-weight-bold text-primary">Edit Category</h2>
</div>
<div class="card-body">
    <div>
        <form asp-action="Edit" asp-controller="Category" method="post">
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" value="@Model.CategoryName" />
                <input asp-for="CategoryId" hidden readonly class="form-control" value="@Model.CategoryId" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control">@Model.Description</textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Picture" class="control-label"></label>
                <input asp-for="Picture" class="form-control" value="@Model.Picture" />
                <span asp-validation-for="Picture" class="text-danger"></span>
            </div>
            <div class="form-check">
                <input asp-for="Status" class="form-check-input" checked="@Model.Status" />
                <label class="form-check-label">Status</label>
            </div>
            <br />
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-icon-split">
                    <span class="icon text-white-50">
                        <i class="fas fa-plus"></i>
                    </span>
                    <span class="text">Save</span>
                </button>
            </div>
        </form>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-secondary btn-icon-split">
            <span class="icon text-white-50">
                <i class="fas fa-arrow-left"></i>
            </span>
            <span class="text">Back To List</span>
        </a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
